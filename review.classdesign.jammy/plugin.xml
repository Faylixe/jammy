<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

 
   <extension
         point="org.eclipse.ui.services">
      <serviceFactory
            factoryClass="review.classdesign.jammy.service.factory.GoogleSessionServiceFactory">
         <service
               serviceClass="review.classdesign.jammy.service.IGoogleSessionService">
         </service>
      </serviceFactory>
      <serviceFactory
            factoryClass="review.classdesign.jammy.service.factory.SubmissionServiceFactory">
         <service
               serviceClass="review.classdesign.jammy.service.ISubmissionService"></service>
      </serviceFactory>
      <sourceProvider
            provider="review.classdesign.jammy.service.internal.GoogleSessionProvider">
         <variable
               name="review.classdesign.jammy.logged"
               priorityLevel="workbench">
         </variable>
      </sourceProvider>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="review.classdesign.jammy.commands.category"
            name="Jammy">
      </category>
      <command
            categoryId="review.classdesign.jammy.commands.category"
            defaultHandler="review.classdesign.jammy.command.ContestSelectionCommand"
            id="review.classdesign.jammy.command.contestselection"
            name="Select contest">
      </command>
      <command
            categoryId="review.classdesign.jammy.commands.category"
            defaultHandler="review.classdesign.jammy.command.OpenSolverCommand"
            id="review.classdesign.jammy.command.opensolver"
            name="Open problem solver">
      </command>
      <command
            categoryId="review.classdesign.jammy.commands.category"
            defaultHandler="review.classdesign.jammy.command.RunSampleDatasetCommand"
            id="review.classdesign.jammy.command.runtest"
            name="Run sample dataset">
      </command>
   </extension>
     <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="Jammy">
            <command
                  commandId="review.classdesign.jammy.command.contestselection"
                  id="review.classdesign.jammy.contribution.select.contest"
                  label="Select contest"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:review.classdesign.jammy.menu.contest?after=contest.contribution">
         <command
               commandId="review.classdesign.jammy.command.opensolver"
               label="Open problem solver"
               style="push">
         </command>
         <command
               commandId="review.classdesign.jammy.command.runtest"
               label="Run sample dataset"
               style="push">
         </command>
      </menuContribution>
   </extension>
   
    <extension
         point="org.eclipse.ui.views">
      <category
            id="review.classdesign.jammy.view.category"
            name="Jammy">
      </category>
      <view
            category="review.classdesign.jammy.view.category"
            class="review.classdesign.jammy.ui.view.SubmissionView"
            id="review.classdesign.jammy.view.submission"
            name="Submission"
            restorable="true">
      </view>
      <view
            category="review.classdesign.jammy.view.category"
            class="review.classdesign.jammy.ui.view.ProblemView"
            icon="resources/icons/problem.view.png"
            id="review.classdesign.jammy.view.problem"
            name="Problem description"
            restorable="true">
         <description>
            This view displays the currently selected problem description.
         </description>
      </view>
      <view
            category="review.classdesign.jammy.view.category"
            class="review.classdesign.jammy.ui.view.ContestExplorer"
            icon="resources/icons/contest.view.png"
            id="review.classdesign.jammy.view.contest"
            name="Contest Explorer"
            restorable="true">
         <description>
            Contest explorer allows to navigate between each problem exposed by the currently selected CodeJam round.
         </description>
      </view>
   </extension>
    <extension
          point="org.eclipse.ui.preferencePages">
       <page
             class="review.classdesign.jammy.ui.view.PreferencePage"
             id="review.classdesign.jammy.preferences.root"
             name="Jammy">
       </page>
    </extension>
    <extension
          point="org.eclipse.ui.perspectives">
       <perspective
             class="review.classdesign.jammy.ui.JammyPerspectiveFactory"
             id="review.classdesign.jammy.perspective"
             name="Jammy">
       </perspective>
    </extension>
</plugin>
