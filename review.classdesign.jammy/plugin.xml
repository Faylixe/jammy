<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

 
   <extension
         point="org.eclipse.ui.services">
      <serviceFactory
            factoryClass="review.classdesign.jammy.service.factory.GoogleSessionServiceFactory">
         <service
               serviceClass="review.classdesign.jammy.service.IGoogleSessionService">
         </service>
      </serviceFactory>
      <serviceFactory
            factoryClass="review.classdesign.jammy.service.factory.SubmissionServiceFactory">
         <service
               serviceClass="review.classdesign.jammy.service.ISubmissionService"></service>
      </serviceFactory>
      <sourceProvider
            provider="review.classdesign.jammy.service.internal.GoogleSessionProvider">
         <variable
               name="review.classdesign.jammy.logged"
               priorityLevel="workbench">
         </variable>
      </sourceProvider>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="review.classdesign.jammy.ui.commands.category"
            name="Jammy">
      </category>
      <command
            categoryId="review.classdesign.jammy.ui.commands.category"
            defaultHandler="review.classdesign.jammy.ui.handler.wizard.ContestHandler"
            id="review.classdesign.jammy.ui.command.contestselection"
            name="Select contest">
      </command>
      <command
            categoryId="review.classdesign.jammy.ui.commands.category"
            defaultHandler="review.classdesign.jammy.ui.handler.LoginHandler"
            id="review.classdesign.jammy.ui.command.login"
            name="Login">
      </command>
      <command
            categoryId="review.classdesign.jammy.ui.commands.category"
            defaultHandler="review.classdesign.jammy.ui.handler.LogoutHandler"
            id="review.classdesign.jammy.ui.command.logout"
            name="Logout">
      </command>
   </extension>
     <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="Jammy">
            <command
                  commandId="review.classdesign.jammy.ui.command.login"
                  label="Login"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="review.classdesign.jammy.logged">
                     <equals
                           value="false">
                     </equals>
                  </with>
               </visibleWhen>
            </command>
            <command
                  commandId="review.classdesign.jammy.ui.command.logout"
                  label="Logout"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="review.classdesign.jammy.logged">
                     <equals
                           value="true">
                     </equals>
                  </with>
               </visibleWhen>
            </command>
            <command
                  commandId="review.classdesign.jammy.ui.command.contestselection"
                  id="review.classdesign.jammy.ui.contribution.select"
                  label="Select contest"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="review.classdesign.jammy.logged">
                     <equals
                           value="true">
                     </equals>
                  </with>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
   </extension>
   
    <extension
         point="org.eclipse.ui.views">
      <category
            id="review.classdesign.jammy.ui.view.category"
            name="Jammy">
      </category>
      <view
            category="review.classdesign.jammy.ui.view.category"
            class="review.classdesign.jammy.ui.view.SubmissionView"
            id="review.classdesign.jammy.ui.view.submission"
            name="Submission"
            restorable="true">
      </view>
      <view
            category="review.classdesign.jammy.ui.view.category"
            class="review.classdesign.jammy.ui.view.ProblemView"
            id="review.classdesign.jammy.ui.view.problem"
            name="Round problem"
            restorable="true">
      </view>
   </extension>
</plugin>
